<Window x:Class="MaterialLicenseChecker.Views.ExportLlicenseText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaterialLicenseChecker.Views"
        mc:Ignorable="d"
        Title="ライセンス表示を出力する" Height="115" Width="320" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Icon=".././EmbeddedResources/Images/WindowIconImage.ico">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
            <Label Content="ライセンス表示を出力するファイル" Target="{Binding ElementName=MaterialFilePath}" HorizontalAlignment="Right"/>
            <TextBox x:Name="ExportedLicenseTextFilePath" Width="90" Margin="0,2"/>
            <Button Height="20" Margin="5,0,0,0" Click="InputPathButton" >参照</Button>
        </StackPanel>


        <StackPanel Orientation="Vertical">
            <Button Content="出力する" Padding="5" HorizontalAlignment="Center" Margin="0,10,0,0" Click="ExportLicenseTextButton"></Button>
        </StackPanel>
    </StackPanel>
</Window>
